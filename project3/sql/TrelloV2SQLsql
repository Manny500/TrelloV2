INSERT INTO LANE VALUES (2, 1, 'In Progress');
INSERT INTO LANE VALUES (3, 1, 'Testing');
INSERT INTO LANE VALUES (4, 1, 'Verify');
INSERT INTO LANE VALUES (5, 1, 'Done');
INSERT INTO LANE VALUES (6, 2, 'Testing');
COMMIT;
/

